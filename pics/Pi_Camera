# Started Feb 15
# Finished by Feb 17
# The camera will take pictures every half second for the entirety
# of the flight from the bottom of the plane.


from picamera import PiCamera
from time import sleep
from gpiozero import Button

button = Button(17)
camera = PiCamera()

frame = 1

camera.start_preview()
button.wait_for_press()
sleep(3)

# while loop to make it repeat until stopped by a keyboard entry
while True:
    camera.capture('Animation_pic/frame%03d.jpg' % frame) #adding numbers to pictures
    frame += 1
    sleep(.5)
    # stopping the program with CTRL+C
    
    button.wait_for_press()
    camera.stop_preview()
    break
